<section class="ilo-slider">
  <input 
    type="radio" 
    name="slider" 
    value="ilo-slide01"
    checked />
  <input 
    type="radio" 
    name="slider" 
    value="ilo-slide02" />
  <input 
    type="radio" 
    name="slider" 
    value="ilo-slide03" />
  <div class="ilo-slide01 ilo-slide"></div>
  <div class="ilo-slide02 ilo-slide"></div>
  <div class="ilo-slide03 ilo-slide"></div>
</section>



/* ------ CSS ------ */

body {
  overflow: hidden;
  background-color: #000000;
}


@mixin slide-active {
  opacity: 1;
  transform: scale(1); 
  transition: 750ms $easeOutCirc;
}

$easeOutBack: cubic-bezier(0.175, 0.885, 0.32, 1.275);
$easeOutCirc: cubic-bezier(0.075, 0.82, 0.165, 1);


.ilo-slider {
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;

  .ilo-slide {
    position: absolute;
    /* negative z-index doesn't work in all browsers*/
    z-index: -1;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    opacity: 0;
    transition: 300ms;
    background-position: center;
    background-size: cover;
    transform: scale(1.1);

    &.ilo-slide01 {
      background-image: url(http://placekitten.com/1300/1300) 
    }

    &.ilo-slide02 {
      background-image: url(http://placekitten.com/1600/1600)
    }

    &.ilo-slide03 {
      background-image: url(http://placekitten.com/900/900)
    }
  }

  input {
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    appearance: none;
    -webkit-appearance: none;
    outline: none;
    width: 20px;
    height: 20px;

    &::before {
      position: absolute;
      content: "";
      display: block;
      background-color: rgba(0,0,0,0.6);
      width: 20px;
      height: 20px;
      border-radius: 50%;
      box-shadow: 0 0 20px 5px rgba(255,255,255,0.2);
      transform: scale(0.6);
      transition: 250ms $easeOutBack;
    }

    &::after {
      position: absolute;
      content: "";
      display: block;
      width: 15px;
      height: 15px;
      border-radius: 50%;
      background-color: purple;
      transition: all 1200ms $easeOutBack;
      transform: scale(0);
    }
    
    &:hover {
      &::before {
        transform: scale(0.75);
      }
    }
    
    &:active {
      &::before {
        transform: scale(0.4);
      }
    }

    &:checked {
      &::before {
        transform: scale(1);
      }
      
      &::after {
        background-color: #00ccff;
        transform: scale(1);
      }

      &[value="ilo-slide01"] ~ .ilo-slide01 {
        @include slide-active;
      }

      &[value="ilo-slide02"] ~ .ilo-slide02 {
        @include slide-active;
      }

      &[value="ilo-slide03"] ~ .ilo-slide03 {
        @include slide-active;
      }
    }
  }
}
